<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼이 눌렸을 때의 배경 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lotte_primary"/> <!-- 눌렀을 때의 색상 -->
            <corners android:radius="10dp"/>
            <stroke android:color="#88DA291C" android:width="2dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lotte_primary"/>
            <corners android:radius="10dp"/>
            <stroke android:color="#88DA291C" android:width="2dp"/>
        </shape>
    </item>
    <!-- 버튼의 기본 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 기본 색상 -->
            <corners android:radius="10dp"/>
            <stroke android:color="#88DA291C" android:width="2dp"/>
        </shape>
    </item>
</selector>